<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinacolor.chinesetraditionalcolors">

    <uses-sdk android:minSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/china"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/china"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity android:name=".MyColorActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" >

        </activity>
        <activity
            android:name=".FoldersAcivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity
            android:name=".FolderItemActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>

        <provider
            android:name="com.chinacolor.chinesetraditionalcolors.ColorProvider"
            android:authorities="com.chinacolor.chinesetraditionalcolors.provider" />
    </application>

</manifest>